<div class='container mt-5 col-lg-8 mb-5 title pb-1'>
  <h1 class='font main-text text-center'>Consult & Ask</h1>
</div>

<div class='container col-lg-8 mb-3'>
  <%= render 'layouts/error_messages', model: @post %>
</div>

<div class='container form-horizontal'>
  <%= form_with model: @post, url: posts_path, local:true do |f| %>
  <div class='form-group row justify-content-center'>
    <label class='col-lg-3 text-center'>タイトル</label>
    <div class='col-lg-3 field'>
      <%= f.text_field :title %>
    </div>
  </div>
  <div class='form-group row justify-content-center'>
    <label class='col-lg-3 text-center'>本文</label>
    <div class='col-lg-3 field'>
      <%= f.text_area :text, size: '23x10' %>
    </div>
  </div>
  <div class='form-group row justify-content-center'>
    <label class='col-lg-3 text-center'>画像を添付</label>
    <div class='col-lg-3 field'>
      <%= f.attachment_field :image %>
    </div>
  </div>
  <div class='row justify-content-center'>
    <%= f.submit '投稿する', class: 'btn btn-warning btn-lg mt-5' %>
  </div>
  <% end %>
</div>
