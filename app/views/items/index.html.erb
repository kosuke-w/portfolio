<div class='container mt-5 col-lg-8 mb-5 d-flex justify-content-between title'>
  <div></div>
  <h1 class='font main-text text-center'>MY ITEMS</h1>
  <div>
    <%= link_to 'Add item', new_item_path, class: 'btn btn-light text-dark font mt-3' %>
  </div>
</div>

<div class='container col-lg-8 window'>
  <div class='d-flex flex-wrap'>
    <% @items.each do |item| %>
    <div class='d-flex flex-column justify-content-center mr-3 mb-3 ml-3 mt-3 window shadow'>
      <div>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 187, 187, :alt => 'item' %>
        <% end %>
      </div>
      <div class='mx-auto mt-2 border-top'>
        <%= item.name %>
      </div>
      <div class='mx-auto'>
        <%= item.genre %>
      </div>
    </div>
    <% end %>
    <div class='container mt-5 d-flex justify-content-center'>
      <%= paginate @items %>
    </div>
  </div>
</div>
