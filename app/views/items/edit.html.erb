<h1>MY ITEMS</h1>
<h3>アイテム情報の編集</h3>

<%= form_with model: @item, method: :patch, url: item_path(@item.id), local:true do |f| %>
  <div>
    <label>アイテム画像</label>
    <div>
      <%= f.attachment_field :image %>
    </div>
  </div>
  <div>
    <label>アイテム名</label>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div>
    <label>ジャンル</label>
    <div>
      <%= f.select :genre, options_for_select(Item.genres) %>
    </div>
  </div>
  <div>
    <label>カラー</label>
    <div>
      <%= f.select :color, options_for_select(Item.colors) %>
    </div>
  </div>
  <div>
    <label>購入時価格</label>
    <div>
      <%= f.text_field :price %>
    </div>
  </div>
  <div>
    <label>ブランド名</label>
    <div>
      <%= f.text_field :brand %>
    </div>
  </div>
  <div>
    <label>コメント</label>
    <div>
      <%= f.text_area :caption %>
    </div>
  </div>

  <%= f.submit '変更を保存' %>
<% end %>