<div class='container mt-5 col-lg-8 mb-5 title pb-1'>
  <h1 class='font main-text text-center'>MY ITEMS</h1>
  <h4 class='font text-center text-light'>アイテム登録</h4>
</div>

<div class='container col-lg-8 mb-3'>
  <%= render 'layouts/error_messages', model: @item %>
</div>

<div class='container form-horizontal'>
  <%= form_with model: @item, url: items_path, local:true do |f| %>
    <div class='form-group row justify-content-center'>
      <label class='col-lg-3 text-center'>アイテム画像</label>
      <div class='col-lg-3 field'>
        <%= f.attachment_field :image %>
      </div>
    </div>
    <div class='form-group row justify-content-center'>
      <label class='col-lg-3 text-center'>アイテム名</label>
      <div class='col-lg-3 field'>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class='form-group row justify-content-center'>
      <label class='col-lg-3 text-center'>ジャンル</label>
      <div class='col-lg-3 field'>
        <%= f.select :genre, Item.genres.keys, {prompt: '選択してください'} %>
      </div>
    </div>
    <div class='form-group row justify-content-center'>
      <label class='col-lg-3 text-center'>カラー</label>
      <div class='col-lg-3 field'>
        <%= f.select :color, Item.colors.keys, {prompt: '選択してください'} %>
      </div>
    </div>
    <div class='form-group row justify-content-center'>
      <label class='col-lg-3 text-center'>購入時価格</label>
      <div class='col-lg-3 field'>
        <%= f.text_field :price %>
      </div>
    </div>
    <div class='form-group row justify-content-center'>
      <label class='col-lg-3 text-center'>ブランド名</label>
      <div class='col-lg-3 field'>
        <%= f.text_field :brand %>
      </div>
    </div>
    <div class='form-group row justify-content-center'>
      <label class='col-lg-3 text-center'>コメント</label>
      <div class='col-lg-3 field'>
        <%= f.text_area :caption %>
      </div>
    </div>

    <div class='row justify-content-center'>
      <%= f.submit '登録', class: 'btn btn-warning btn-lg mt-5' %>
    </div>
  <% end %>
</div>