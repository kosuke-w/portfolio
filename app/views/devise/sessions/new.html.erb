<div class='container mt-5'>
  <div class='container text-center'>
    <h1 class='font main-text text-dark mb-5'>Log in</h1>
  </div>

  <div class='container pt-5 form-horizontal mb-5'>
    <%= form_with model: @user, url: user_session_path, local:true do |f| %>
      <div class="form-group row justify-content-center">
        <label class='control-label col-lg-2'>メールアドレス</label>
        <div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <label class='control-label col-lg-2'>パスワード</label>
        <div>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group row justify-content-center">
          <label class='control-label col-lg-2'></label>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit "Log in", class: 'btn btn-primary mt-5 font' %>
      </div>
    <% end %>
  </div>

  <div class='container d-flex justify-content-center mt-5'>
    <%= link_to '会員登録はこちらから', new_user_registration_path, class: 'font' %>
  </div>
</div>