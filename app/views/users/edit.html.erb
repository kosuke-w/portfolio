<h1>PROFILE</h1>
<h3>ユーザー情報の編集</h3>

<%= form_with model: @user, url: user_path(current_user.id), local:true do |f| %>

  <div class="field">
    <label>アイコン</label>
    <div>
      <%= f.attachment_field :image %>
    </div>
  </div>

  <div class="field">
    <label>名前（ニックネーム）</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <label>メールアドレス</label>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <label>性別</label>
    <div>
      <%= f.radio_button :sex, User.sexes.key(0) %>
      <%= f.label :sex, '男性' %>
      <%= f.radio_button :sex, User.sexes.key(1) %>
      <%= f.label :sex, '女性' %>
    </div>
  </div>

  <div class="field">
    <label>住まい</label>
    <div>
      <%= f.select :address, User.addresses.keys %>
    </div>
  </div>

  <div class="field">
    <label>コメント</label>
    <div>
      <%= f.text_area :introduction %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
