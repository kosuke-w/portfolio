<h1>MY COORDINATE</h1>
<h3>コーディネート編集</h3>

<%= form_with model: @coordinate, method: :patch, url: coordinate_path(@coordinate.id), local:true do |f| %>
  <% @items.each do |item| %>
    <%= attachment_image_tag item, :image, :fill, 100, 100 %>
    <%= f.check_box :item_ids, { multiple: true, include_hidden: false}, item[:id] %>
  <% end %>

<div>
  <label>シーズン</label>
  <div>
    <%= f.select :season, options_for_select(Coordinate.seasons) %>
  </div>
</div>

<div>
  <label>コメント</label>
  <div>
    <%= f.text_area :comment %>
  </div>
</div>
<%= f.submit '変更を保存' %>
<% end %>